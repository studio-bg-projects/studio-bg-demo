{
  "type": "object",
  "properties": {
    "summary": {
      "type": "string",
      "description": "Short description (up to 50 characters) of the image contents.",
      "example": [
        "Intact DAF tractor with headlights on",
        "Damaged Volvo tractor with intact trailer",
        "Red car",
        "Damaged tractor photographed at an angle"
      ]
    },
    "version": {
      "type": "string",
      "description": "Current schema version",
      "enum": [
        "0.3-2025-05-25"
      ]
    },
    "plate": {
      "type": "string",
      "description": "License plate in Bulgarian format (CB8638BE)",
      "example": "CB8638BE"
    },
    "vehicle": {
      "type": "object",
      "properties": {
        "type": {
          "type": "string",
          "description": "Type of vehicle",
          "enum": [
            "tractor",
            "truck",
            "passenger car",
            "other"
          ]
        },
        "model": {
          "type": "string",
          "description": "Make and model of the vehicle",
          "example": [
            "DAF XF 430",
            "Volvo FH 460"
          ]
        },
        "scratches": {
          "type": "array",
          "description": "All potential scratches on the tractor",
          "items": {
            "type": "object",
            "properties": {
              "summary": {
                "type": "string",
                "description": "Description of the scratch or smudge you observed",
                "example": [
                  "Light scratch near the tire",
                  "Small smudge on the yellow body near the plate",
                  "Barely visible smudge or scratch on the body"
                ]
              },
              "confidence": {
                "type": "string",
                "description": "How confident you are that the description is correct",
                "enum": [
                  "low",
                  "middle",
                  "high"
                ]
              }
            },
            "required": [
              "summary",
              "confidence"
            ]
          }
        },
        "problems": {
          "type": "array",
          "description": "List of missing or damaged parts",
          "items": {
            "type": "object",
            "properties": {
              "part": {
                "type": "string",
                "description": "The part that is damaged or missing",
                "example": "Front bumper"
              },
              "summary": {
                "type": "string",
                "description": "Description of the damage or what is missing",
                "example": [
                  "Cracked bumper",
                  "Missing right headlight",
                  "Missing left mirror",
                  "Broken sun visor above the windshield"
                ]
              },
              "confidence": {
                "type": "string",
                "description": "How confident you are that the description is correct",
                "enum": [
                  "low",
                  "middle",
                  "high"
                ]
              },
              "criticality": {
                "type": "string",
                "description": "Criticality level. `critical` means the combination cannot move; `non-critical` means it can move",
                "enum": [
                  "critical",
                  "non-critical"
                ]
              }
            },
            "required": [
              "part",
              "summary",
              "confidence",
              "criticality"
            ]
          }
        }
      },
      "required": [
        "type",
        "model",
        "problems"
      ]
    },
    "trailer": {
      "type": "object",
      "nullable": true,
      "properties": {
        "type": {
          "type": "string",
          "description": "Trailer type",
          "example": "Curtain-sided"
        },
        "model": {
          "type": "string",
          "description": "Trailer model",
          "example": "KÃ–GEL"
        },
        "problems": {
          "type": "array",
          "items": {
            "type": "object",
            "properties": {
              "summary": {
                "type": "string",
                "description": "Description of the trailer damage",
                "example": "Torn tarp"
              },
              "confidence": {
                "type": "string",
                "description": "How confident you are that the description is correct",
                "enum": [
                  "low",
                  "middle",
                  "high"
                ]
              }
            },
            "required": [
              "summary",
              "confidence"
            ]
          }
        }
      },
      "required": [
        "type",
        "model",
        "problems"
      ]
    }
  },
  "required": [
    "summary",
    "plate",
    "vehicle",
    "trailer"
  ]
}
